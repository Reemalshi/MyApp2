<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layer"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/bu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/screenn"
        android:background="#921a55"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/te1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/te4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OnBlink"
        android:textColor="@color/white"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bu1"
        app:layout_constraintBottom_toTopOf="@id/te1"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/te1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:spinnerMode="dropdown"/>

            <EditText
                android:id="@+id/text1"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:hint="First name"
                />

            <EditText
                android:id="@+id/text2"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:hint="Last name"
                />

            <EditText
                android:id="@+id/text3"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:hint="Work Email"
                />


            <EditText
                android:id="@+id/text4"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:hint="Organization name"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:spinnerMode="dropdown"
                    />

                <EditText
                    android:id="@+id/text5"
                    android:layout_width="255dp"
                    android:layout_height="wrap_content"
                    android:hint="Organization name"
                    />
            </LinearLayout>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agree to tearm">

            </CheckBox>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <ImageButton
        android:id="@+id/bu2"
        android:layout_width="50dp"
        android:layout_height= "50dp"
        android:background="@drawable/layerr"
        app:layout_constraintBottom_toBottomOf="@+id/te1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="18dp"
        android:elevation="10dp"
        />
    <TextView
        android:id="@+id/te2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="have an account?     "
        app:layout_constraintTop_toBottomOf="@id/te1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/te3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in"
        app:layout_constraintTop_toBottomOf="@id/te1"
        app:layout_constraintStart_toEndOf="@id/te2"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>